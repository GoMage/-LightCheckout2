<?xml version="1.0"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <gomage_light_checkout_configuration>
            <general>
                <page_title>GoMage LightCheckout</page_title>
                <enable_discount_codes>1</enable_discount_codes>
                <show_3_column_checkout>1</show_3_column_checkout>
            </general>
            <devices>
                <desktop>1</desktop>
            </devices>
            <vat>
                <text_under_vat_tax_field>Buy without VAT (for EU only)</text_under_vat_tax_field>
            </vat>
            <number_product_in_checkout>
                <number_visible_in_checkout>10</number_visible_in_checkout>
            </number_product_in_checkout>
            <order_comment>
                <title>Comment</title>
            </order_comment>
        </gomage_light_checkout_configuration>
        <csp>
            <mode>
                <storefront>
                    <report_uri>/_/csp-reports</report_uri>
                </storefront>
            </mode>
        </csp>
    </default>
</config>

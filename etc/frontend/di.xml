<?xml version="1.0"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="GoMage\LightCheckout\Block\Onepage">
        <arguments>
            <argument name="layoutProcessors" xsi:type="array">
                <item name="addressFormAttributes" xsi:type="object">GoMage\LightCheckout\Block\Checkout\LayoutProcessor</item>
                <item name="directoryData" xsi:type="object">Magento\Checkout\Block\Checkout\DirectoryDataProcessor</item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Checkout\Model\CompositeConfigProvider">
        <arguments>
            <argument name="configProviders" xsi:type="array">
                <item name="one_step_checkout_config_provider" xsi:type="object">GoMage\LightCheckout\Model\ConfigProvider</item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Checkout\Controller\Index\Index">
        <plugin name="gomage_light_checkout_checkout_controller_index_index" type="GoMage\LightCheckout\Plugin\Checkout\Controller\Index\Index"/>
    </type>
    <virtualType name="GoMage\LightCheckout\Model\Address\Form\AttributeMeta\Modifier\Attribute\Prefix"
                 type="GoMage\LightCheckout\Model\Address\Form\AttributeMeta\Modifier\Attribute\PrefixSuffix">
        <arguments>
            <argument name="attributeCode" xsi:type="string">prefix</argument>
        </arguments>
    </virtualType>
    <virtualType name="GoMage\LightCheckout\Model\Address\Form\AttributeMeta\Modifier\Attribute\Suffix"
                 type="GoMage\LightCheckout\Model\Address\Form\AttributeMeta\Modifier\Attribute\PrefixSuffix">
        <arguments>
            <argument name="attributeCode" xsi:type="string">suffix</argument>
        </arguments>
    </virtualType>
    <type name="GoMage\LightCheckout\Model\Page\Initializer\ThirdPartyModuleList">
        <arguments>
            <argument name="modules" xsi:type="array">
                <item name="0" xsi:type="string">Ebizmarts_SagePaySuite</item>
                <item name="1" xsi:type="string">Adyen_Payment</item>
            </argument>
        </arguments>
    </type>
</config>

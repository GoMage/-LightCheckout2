<?xml version="1.0" encoding="UTF-8"?>

<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd"
      component="Magento_Ui/js/form/form" class="GoMage\LightCheckout\Ui\Component\Form">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">checkout_fields_manager.checkout_fields_manager_data_source</item>
        </item>
<!--        <item name="label" xsi:type="string" translate="true">Some UI</item>-->
        <item name="template" xsi:type="string">templates/form/collapsible-extended</item>
    </argument>
    <settings>
        <dataScope>data</dataScope><!--array key in \GoMage\LightCheckout\Ui\Component\Form::getDataSourceData method-->
        <namespace>checkout_fields_manager</namespace>
        <deps>
            <dep>checkout_fields_manager.checkout_fields_manager_data_source</dep>
        </deps>
    </settings>
    <dataSource name="checkout_fields_manager_data_source" component="Magento_Ui/js/form/provider">
        <dataProvider class="GoMage\LightCheckout\Ui\DataProvider\CheckoutFieldsManagerDataProvider" name="checkout_fields_manager_data_source">
            <settings>
                <requestFieldName/>
                <primaryFieldName/>
            </settings>
        </dataProvider>
    </dataSource>
    <dynamicRows name="items" component="Magento_Ui/js/dynamic-rows/dynamic-rows"
                 template="GoMage_LightCheckout/dynamic-rows/templates/grid">
<!--        <argument name="data" xsi:type="array">-->
<!--            <item name="config" xsi:type="array">-->
<!--                <item name="identificationDRProperty" xsi:type="string">orderItemId</item>-->
<!--                <item name="dataProvider" xsi:type="string">items</item>-->
<!--                <item name="map" xsi:type="array">-->
<!--                    <item name="sku" xsi:type="string">sku</item>-->
<!--                    <item name="qty" xsi:type="string">qty</item>-->
<!--                    <item name="orderItemId" xsi:type="string">orderItemId</item>-->
<!--                </item>-->
<!--            </item>-->
<!--        </argument>-->
        <settings>
<!--            <additionalClasses>-->
<!--                <class name="swatch-visual-options-container">true</class>-->
<!--                <class name="admin__field-wide">true</class>-->
<!--            </additionalClasses>-->
<!--            <defaultRecord>false</defaultRecord>-->
            <addButton>false</addButton>
<!--            <deleteProperty>false</deleteProperty>-->
<!--            <recordTemplate>record</recordTemplate>-->
<!--            <identificationProperty>order_item_id</identificationProperty>-->
<!--            <columnsHeader>true</columnsHeader>-->
<!--            <dndConfig>-->
<!--                <param name="enabled" xsi:type="boolean">true</param>-->
<!--            </dndConfig>-->
        </settings>
        <container name="record" component="Magento_Ui/js/dynamic-rows/record">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="isTemplate" xsi:type="boolean">true</item>
<!--                    <item name="is_collection" xsi:type="boolean">true</item>-->
<!--                    <item name="dataScope" xsi:type="string"/>-->
<!--                    <item name="positionProvider" xsi:type="string">orderItemId</item>-->
                </item>
            </argument>
            <field name="field" formElement="input" sortOrder="10">
                <settings>
                    <elementTmpl>ui/form/element/html</elementTmpl>
                    <dataType>text</dataType>
                    <dataScope>field</dataScope>
                    <label translate="true">Field</label>
                    <labelVisible>false</labelVisible>
                </settings>
            </field>
            <field name="label" formElement="input" sortOrder="20">
                <settings>
                    <elementTmpl>ui/form/element/input</elementTmpl>
                    <dataType>text</dataType>
                    <dataScope>label</dataScope>
                    <label translate="true">Label</label>
                    <labelVisible>false</labelVisible>
                </settings>
            </field>
            <field name="width" formElement="select" sortOrder="30">
                <settings>
                    <dataType>text</dataType>
                    <dataScope>width</dataScope>
                    <label translate="true">Width</label>
                </settings>
                <formElements>
                    <select>
                        <settings>
                            <options>
                                <option name="50" xsi:type="array">
                                    <item name="value" xsi:type="number">50</item>
                                    <item name="label" xsi:type="string" translate="true">50</item>
                                </option>
                                <option name="100" xsi:type="array">
                                    <item name="value" xsi:type="number">100</item>
                                    <item name="label" xsi:type="string" translate="true">100</item>
                                </option>
                            </options>
                        </settings>
                    </select>
                </formElements>
            </field>
            <field name="is_enabled" formElement="checkbox" sortOrder="40">
                <settings>
                    <elementTmpl>GoMage_LightCheckout/form/element/checkbox</elementTmpl>
<!--                    <dataType>text</dataType>-->
                    <dataScope>is_enabled</dataScope>
                    <label translate="true">Enabled</label>
<!--                    <disabled>true</disabled>-->
                </settings>
                <formElements>
                    <checkbox>
                        <settings>
                            <valueMap>
                                <map name="false" xsi:type="string">0</map>
                                <map name="true" xsi:type="string">1</map>
                            </valueMap>
                        </settings>
                    </checkbox>
                </formElements>
            </field>
            <field name="is_required" formElement="checkbox" sortOrder="50">
                <settings>
                    <elementTmpl>GoMage_LightCheckout/form/element/checkbox</elementTmpl>
                    <dataScope>is_required</dataScope>
                    <label translate="true">Required</label>
                </settings>
                <formElements>
                    <checkbox>
                        <settings>
                            <valueMap>
                                <map name="false" xsi:type="string">0</map>
                                <map name="true" xsi:type="string">1</map>
                            </valueMap>
                        </settings>
                    </checkbox>
                </formElements>
            </field>
        </container>
    </dynamicRows>
</form>
